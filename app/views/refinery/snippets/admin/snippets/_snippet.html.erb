<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(snippet) -%>">
  <span class='title'>
    <b><%= snippet.name %></b>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:copy,    refinery.edit_snippets_admin_snippet_path(snippet), t('.copy'), data: { content: "[ render_snippet '#{snippet.slug}' ]" } ) %>
    <%= action_icon(:edit,    refinery.edit_snippets_admin_snippet_path(snippet), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.snippets_admin_snippet_path(snippet), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: snippet.name)}}  ) %>
  </span>
</li>
